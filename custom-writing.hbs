{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-archive-header">
    <div class="outer site-nav-main">
        <div class="inner">
            {{> "site-nav"}}
        </div>
    </div>
    {{> header-background background=feature_image}} {{!--Special header-image.hbs partial to generate the background image--}}
    <div class="inner site-header-content">
        <h1 class="site-title">Writing</h1>
        <h2 class="site-description">
            Just some of my thoughts. Love to discuss / debate so <a href="https://nparikh.me/contact/">reach out</a> anytime!
        </h2>
    </div>
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <style>
    .box-page-writing {
        margin-top: -6vw;
    }
      
    @media (min-width: 900px) {
      .box-page-writing {
        margin-top: -6vw;
      }
    }
    </style>
    <div class="inner posts box-page-writing">
        <div class="post-feed">
            {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
            {{#foreach tags}}
                {{!-- The tag below includes the markup for each tag - partials/tag-card.hbs --}}
                {{> "tag-card"}}
            {{/foreach}}
            {{/get}}
        </div>
    </div>
</main>